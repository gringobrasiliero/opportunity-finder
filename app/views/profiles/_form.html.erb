<%= form_for(@profile) do |f| %>

<%= f.label :first_name %>
<%= f.text_field :first_name, :placeholder => @profile.first_name  %><br>

<%= f.label :last_name %>
<%= f.text_field :last_name, :placeholder => @profile.last_name %><br>

<%= f.label :location %>
<%= f.text_field :location, :placeholder =>  @profile.location %><br>

<%= f.label :profession %>
<%= f.text_field :profession, :placeholder => @profile.profession %><br>

<%= f.submit %>

<% end %>
