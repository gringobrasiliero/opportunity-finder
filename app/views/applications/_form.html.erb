<% if @application.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@application.errors.count, "error") %>
      prohibited this application from being saved:
    </h2>

    <ul>
    <% @application.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@application) do |f| %>

<div class="field<%= ' field_with_errors' if @application.errors[:qualified].any? %>">
<%= f.label :qualified %>
<input type='hidden' name='application[qualified]' value=false>
<%= f.select :qualified,  [['', nil], ['True', true], ['False', false]], :placeholder => @application.qualified %><br></div>

