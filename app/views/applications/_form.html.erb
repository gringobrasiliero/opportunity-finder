
<%= form_for(@application) do |f| %>

<div class="field">
<%= f.label :qualified %>
<input type='hidden' name='application[qualified]' value=false>
<%= f.select :qualified,  [['', nil], ['True', true], ['False', false]], :placeholder => @application.qualified %><br></div>

<div class="field">
<%= f.label :legal %>
<input type='hidden' name='application[legal]' value=false>
<%= f.select :legal,  [['', nil], ['True', true], ['False', false]], :placeholder => @application.legal %><br></div>

<div class="field">
<%= f.label :transportation %>
<input type='hidden' name='application[transportation]' value=false>
<%= f.select :transportation,  [['', nil], ['True', true], ['False', false]], :placeholder => @application.transportation %><br></div>

<div class="field">
<%= f.label :criminal_record %>
<input type='hidden' name='application[criminal_record]' value=false>
<%= f.select :criminal_record,  [['', nil], ['True', true], ['False', false]], :placeholder => @application.criminal_record %><br></div>

<div class="field">
<%= f.label :description_of_criminal_record %>
<%= f.text_area :description_of_criminal_record, :placeholder => @application.description_of_criminal_record %><br></div>


<div class="field">
<%= f.label :month_commitment %>
<%= f.text_field :month_commitment, :placeholder => @application.month_commitment %><br></div>

<div class="field">
<%= f.label :reason_for_interest %>
<%= f.text_field :reason_for_interest, :placeholder => @application.reason_for_interest %><br></div>


<%= f.hidden_field :opportunity_id , :value => @opportunity.id%>
<%= f.hidden_field :user_id , :value => @user.id%>



<%=f.submit%>
<%end%>
