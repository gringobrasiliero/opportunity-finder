
<% if searcher? %>
  <h1> Apply to this Opportunity </h1>
  <h2> <%= @opportunity.title %> </h2>
  <h3> <%= @opportunity.description %> </h3>

  <%= button_to 'Apply to this Opportunity', new_opportunity_application_path(@opportunity), method: :get%>


<%end%>

<% if provider? %>

  <div>
    <h3>Filter Applications:</h3>
    <%= form_tag( opportunity_path(@opportunity), method: "get") do %>
        <%= select_tag "filter", options_for_select(["Best Qualified", "Most Recent", "Oldest"]), include_blank: true %>
      <%= submit_tag "Filter" %>
  </div>
<% end %>

<% @applications.each do |application|%>
  <div class="field">
    <h3>Name: <%=application.profile.first_name%> <%=application.profile.last_name%> </h3>
  </div>

  <div class="field">
    <h3>Email:
      <a href= "mailto:<%=application.user.email%>"> <%=application.user.email%> </a>
    </h3>
  </div>

  <div class="field">
    <img src="<%=application.profile.picture_url %>">
  </div>

  <div class="field">
    <h3>Location: <%=application.profile.location%></h3>
  </div>

  <div class="field">
    <h3>Profession: <%=application.profile.profession%></h3>
  </div>

  <br>

  <div class="field">
    <h3>Qualified for Position: <%=application.qualified%></h3>
  </div>

  <div class="field">
    <h3>Reliable Transportation: <%=application.transportation%></h3>
  </div>

  <div class="field">
    <h3>Has a Criminal Record: <%=application.criminal_record%></h3>
  </div>

  <div class="field">
    <h3>Description of Criminal Record: <%=application.description_of_criminal_record%></h3>
  </div>

  <div class="field">
    <h3>Legally allowed to work: <%=application.legal%></h3>
  </div>

  <div class="field">
    <h3>Month Commitment: <%=application.month_commitment%></h3>
  </div>

  <div class="field">
    <h3>Reason for Interest: <%=application.reason_for_interest%></h3>
  </div>

  <br>
  <% end %>
<% end %>
