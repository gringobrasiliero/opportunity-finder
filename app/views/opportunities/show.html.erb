
<% if searcher? %>
<h1> Apply to this Opportunity </h1>
<h2> <%= @opportunity.title %> </h2>
<h3> <%= @opportunity.description %> </h3>


<%= render partial: 'applications/form', locals: {identifier: @opportunity} %>
<%end%>

<% if provider? %>


<% @opportunity.applications.sort.each do |application|%>


<div class="field">
<h3>Email: <a href="<%=application.user.email%>"><%=application.user.email%></a> </h3></div>

<br>
<div class="field">
<h3>Qualified for Position: <%=application.qualified%></h3></div>
<div class="field">
<h3>Reliable Transportation: <%=application.transportation%></h3></div>
<div class="field">
<h3>Has a Criminal Record: <%=application.criminal_record%></h3></div>
<div class="field">
<h3>Description of Criminal Record: <%=application.description_of_criminal_record%></h3></div>
<div class="field">
<h3>Legally allowed to work: <%=application.legal%></h3></div>
<div class="field">
<h3>Month Commitment: <%=application.month_commitment%></h3></div>
<div class="field">
<h3>Reason for Interest: <%=application.reason_for_interest%></h3></div>

<br>
<% end %>
<% end %>
