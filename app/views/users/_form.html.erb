<%= form_for(@user) do |f| %>

<%= f.label :business_name %>
<%= f.text_field :business_name, :placeholder => @user.business_name  %><br>


<%= f.label :first_name %>
<%= f.text_field :first_name, :placeholder => @user.first_name  %><br>

<%= f.label :last_name %>
<%= f.text_field :last_name, :placeholder => @user.last_name %><br>

<%= f.label :location %>
<%= f.text_field :location, :placeholder =>  @user.location %><br>

<%= f.label :profession %>
<%= f.text_field :profession, :placeholder => @user.profession %><br>

<%= f.submit %>

<% end %>
